---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
  <nav transition:animate="slide">
    <Hamburger />
    <ThemeIcon />
    <Navigation />
  </nav>
</header>

<style>
  header {
    margin: 1rem;
    padding: 1rem;
  }

  nav {
    display: flex;
  }
</style>
