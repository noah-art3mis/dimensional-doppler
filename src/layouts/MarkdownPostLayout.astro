---
import BaseLayout from "./BaseLayout.astro";
import { fade } from "astro:transitions";
const { frontmatter } = Astro.props;

const ttr = 10;
const leiaTb = "x";
---

<BaseLayout pageTitle={frontmatter.title}>
  <img
    class="mainImg"
    src={frontmatter.image.url}
    alt={frontmatter.image.url}
  />

  <p>
    <em>{frontmatter.description}</em>
  </p>

  <p>Written by <a data-astro-reload href="/about/">{frontmatter.author}</a></p>
  <p>Published on {frontmatter.pubDate}</p>

  <p>Tags: {frontmatter.tags}</p>
  <p>Time to read: {ttr}</p>

  <slot />

  <p>Leia tamb√©m: {leiaTb}</p>

  <style>
    .mainImg {
      max-width: 100%;
    }
  </style>

  <style>
    /* dry */

    .tags {
      display: flex;
      flex-wrap: wrap;
    }

    .tag {
      margin: 0.25em;
      border-radius: 0.5em;
      padding: 0.5em 1em;
      font-size: 1.15em;
      background-color: darkred;
    }
  </style>
</BaseLayout>
