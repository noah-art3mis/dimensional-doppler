---
import "./styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Item from "../components/Item.astro";
import { array } from "astro/zod";

function zeroOrOne(): number {
  return Math.floor(Math.random() * 2);
}

function reset(): void {
  phaseOne = Array.from({ length: 10 }, zeroOrOne);
}

let phaseOne: number[] = [];
reset();

// const cursor
---

<html>
  <Header />

  <main>
    <div class="first">
      {
        phaseOne.forEach((element) => {
          <Item value={element}/>;
        })
      }
    </div>
  </main>

  <Footer />
</html>
